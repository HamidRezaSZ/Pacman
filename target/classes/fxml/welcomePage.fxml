<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="CENTER" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="View.WelcomeMenu"
          prefHeight="600.0" prefWidth="900.0">

    <VBox fx:id="vBoxExit" alignment="CENTER">
        <Label alignment="BASELINE_CENTER" text="Are you sure you want to exit?"/>
        <HBox alignment="CENTER">
            <Button fx:id="btnYes" text="Yes" onMouseClicked="#Exit"/>
            <Button fx:id="btnNo" text="No" onMouseClicked="#nothing"/>
        </HBox>
    </VBox>
    <VBox fx:id="vBoxWelcome" alignment="CENTER">
        <Button fx:id="muteButton" text="Mute" onMouseClicked="#mute"/>
        <Button fx:id="btnNewGame" text="Play" onMouseClicked="#play"/>
        <Button fx:id="btnExit" text="Exit" onMouseClicked="#ExitFunction"/>
    </VBox>

</GridPane>
